<!--components/lesson/index.wxml-->
<view class="lesson-item" catchtap="onTap" data-detail="{{item}}">
    <image class="lesson-img" src="{{item.list_img}}" mode="widthFix"></image>
    <view class="item-right">
        <view class="title">{{item.title}}</view>
        <view class="name">讲师: 李阳</view>
        <view class="desc">
            {{item.remark}}
        </view>
        <view class="buy">
            <text class="" space="{{true}}" decode="{{true}}">{{item.score}} &nbsp;人已学习</text>
            <text class="" space="{{true}}" decode="{{true}}">{{item.price}} ￥&nbsp;</text>
        </view>
    </view>

</view>